@import '_settings'

normalize-css()
base()

*
  box-sizing: border-box;

a
  text-decoration: none;
  color: inherit;
  transition: color 0.1s;

a:hover
  color: $teal;

.menuButton
  position: fixed;
  right: 1rem;
  top: 1rem;
  cursor: pointer;
  transform: translateX(0rem);
  transition: 0.4s;

.menuButton.open
  transform: translateX(-20rem);

.bar1, .bar2, .bar3
  width: 35px;
  height: 5px;
  background: #333;
  margin: 6px 0;
  transition: 0.4s;
  border-radius: 20px;

.open .bar1
  transform: rotate(-45deg) translate(-8px, 8px);

.open .bar2
  opacity: 0;

.open .bar3
  transform: rotate(45deg) translate(-8px, -8px);

#sideMenu
  background: grey;
  height: 100vh
  width: 20rem;
  position: fixed;
  right: 0;
  transform: translateX(20rem);
  transition: 0.4s;
  padding-top: 4rem;

#sideMenu.open
  transform: translateX(0rem);

#sideMenu a
  display: block;
  width: max-content;
  margin: auto;
  font-size: 3rem;
  font-weight: 300;
  margin-bottom: 1rem;
  cursor: pointer;
  color: white;

#sideMenu a:hover
  color: $teal;

#sideMenu.open + .container
  transform: translateX(-20rem);

.container
  transform: translateX(0rem);
  transition: 0.4s;

body
  font-family: $open-sans;
  font-size: 1.3rem;
  color: rgba(0, 0, 0, 0.8);
  margin: 0;
  background: #fafafa;

header
  width: 100%;
  height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;

header .title
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;

header .name
  font-family: $pacifico;
  font-size: 5rem;
  line-height: 4.8rem;
  margin-left: -0.1rem;
  color: #333;

header .tagLine
  font-size: 1.9rem;

header .links
  border-top: 1px solid rgba(0, 0, 0, 0.2);
  width: 100%;
  margin-top: 1rem;
  padding-top: 1rem;
  display: flex;
  flex-direction: row;
  justify-content: center;

header .links .spacer
  width: 2rem;
  text-align: center;
  cursor: default;

main
  padding: 0 5%;

section
  max-width: 800px;
  margin: auto;
  min-height: 100vh;
  display: flex;
  align-items: center;
  text-align: center;

.innerSection
  margin: auto;

h1
  font-family: $pacifico;
  font-size: 4rem;
  text-align: center;
  margin-top: 0;
  color: #333;


// About section
#about img
  border: 8px white solid;
  border-radius: 7rem;
  width: 14rem;
  display: block;
  margin: auto;
  margin-bottom: 3rem;


// Projects section
$mar = 1.5rem;
$bRad = 2px;

.item
  background: #fff;
  display: flex;
  flex-direction: row;
  margin-bottom: $mar;
  border-radius: $bRad;
  box-shadow: 0 3px 6px rgba(0,0,0,.08), 0 3px 6px rgba(0,0,0,.12);
  transition: all 0.3s cubic-bezier(.25,.8,.25,1);

.item:hover
  color: inherit;
  box-shadow: 0 10px 20px rgba(0,0,0,0.09), 0 6px 6px rgba(0,0,0,0.15);

.item img
  border-radius: $bRad;
  width: 315px;
  height: 250px;
  padding: 10px;

.item .text 
  font-family: sans-serif;
  padding: 2rem;
  padding-left: calc(2rem - 10px);
  text-align: left;
  font-size: 1.1rem;

.item .title 
  font-size: 2rem;
  font-weight: bold;
  margin-bottom: 0.5rem;
  text-align: left;


// Contact section
#contact a
  display: block;
  width: max-content;
  margin: auto;

#contact .socialLinks
  margin: 2.5rem auto;
  display: flex;
  flex-direction: row;
  align-content: center;
  justify-content: center;

#contact .socialLinks a
  margin: 0 0.5rem;
  font-size: 2rem;


@media (max-width: 500px)
  #sideMenu.open
    width: 100vw;

  .menuButton.open
    transform: translateX(0rem);

  #sideMenu.open + .container
    transform: translateX(-100%);